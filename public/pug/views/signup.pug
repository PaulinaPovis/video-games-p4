extends ../layout/default.pug 
include ../mixins/site-header.pug

block header 
    - const currentPage = 'signup';
    +mixinSiteHeader(currentPage)

block content
    section.section 
        .container 
            .row 
                .col-12.col-md-8.mx-auto
                    form(id="signup")
                        h3.text-center.mb-3 Choose your avatar!
                        p.text-center(id="avatar-output")
                        .avatars
                            img(src="../img/avatar-1.jpg", alt="avatar", data-id="1")
                            img(src="../img/avatar-2.jpg", alt="avatar", data-id="2")
                            img(src="../img/avatar-3.jpg", alt="avatar", data-id="3")
                            img(src="../img/avatar-4.jpg", alt="avatar", data-id="4")
                        .form-floating.mb-3
                            input.form-control.rounded-3(type="text", name="username", id="userName", placeholder="Username")
                            label(for="userName") Username
                            .invalid-field
                                //-Validaci贸n de errores
                        .form-floating.mb-3
                            input.form-control.rounded-3(type="email", name="email", id="userEmail", placeholder="name@example.com")
                            label(for="userEmail") Email address
                            .invalid-field
                                //-Validaci贸n de errores
                        .form-floating.mb-3
                            input.form-control.rounded-3(type="password", minlength="4", name="pass", id="userPass", placeholder="Password")
                            label(for="userPass") Password
                            .invalid-field
                                //-Validaci贸n de errores
                        .form-floating.mb-3
                            input.form-control.rounded-3(type="password", name="repeatPass", id="repeatPass", placeholder="Repeat Password")
                            label(for="repeatPass") Repeat Password
                            .invalid-field
                                //-Validaci贸n de errores
                        p.error-message.hide
                        button.w-100.mb-2.btn.btn-lg.rounded-3.btn-primary(type="submit") Sign up
                        small.text-muted By clicking Sign up, you agree to the terms of use.
                        hr.my-4
                        small.text-muted Already have an account?
                            a(href="login.html") Login here

block pageScripts 
    script(src="../js/signup.js", type="module")